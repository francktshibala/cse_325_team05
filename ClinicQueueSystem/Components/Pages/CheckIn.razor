@page "/checkin"
@using ClinicQueueSystem.Data
@using ClinicQueueSystem.Data.Models
@using ClinicQueueSystem.Services
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject ApplicationDbContext DbContext
@inject AuthorizationService AuthService
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Check In - Clinic Queue System</PageTitle>

<div class="container" style="padding: 2rem 0; max-width: 800px;">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 style="color: #2C5F8D; font-weight: 700;">Check In</h1>
            <p class="text-muted">Check in for your appointment or join the walk-in queue</p>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (hasActiveQueueTicket)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card" style="background: white; border: 2px solid #28a745; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08); padding: 2rem;">
                    <div class="text-center">
                        <div style="font-size: 4rem; margin-bottom: 1rem;">âœ…</div>
                        <h3 style="color: #28a745; margin-bottom: 1rem;">You're Already Checked In!</h3>
                        <p style="color: #495057; font-size: 1.125rem; margin-bottom: 2rem;">
                            You are currently in the queue. View your queue status to see your position.
                        </p>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="/queue" class="btn btn-primary btn-lg">View Queue Status</a>
                            <button class="btn btn-outline-danger btn-lg" @onclick="CancelCheckIn">Cancel Check-In</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card" style="background: white; border: 1px solid #e9ecef; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08); padding: 2rem;">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @successMessage
                        </div>
                    }

                    <h4 style="color: #2C5F8D; margin-bottom: 1.5rem;">Select Check-In Type</h4>

                    <div class="mb-4">
                        <label class="form-label" style="font-weight: 600; color: #495057;">Do you have an appointment?</label>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="checkInType" id="withAppointment" checked="@(checkInType == "appointment")" @onchange="@(() => checkInType = "appointment")" />
                            <label class="form-check-label" for="withAppointment">
                                Yes, I have an appointment
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="checkInType" id="walkIn" checked="@(checkInType == "walkin")" @onchange="@(() => checkInType = "walkin")" />
                            <label class="form-check-label" for="walkIn">
                                No, this is a walk-in visit
                            </label>
                        </div>
                    </div>

                    @if (checkInType == "appointment")
                    {
                        <div class="mb-4">
                            <label class="form-label" style="font-weight: 600; color: #495057;">Select Appointment</label>
                            @if (upcomingAppointments == null || !upcomingAppointments.Any())
                            {
                                <div class="alert alert-info">
                                    You don't have any upcoming appointments scheduled. You can check in as a walk-in instead.
                                </div>
                            }
                            else
                            {
                                <select class="form-select" @bind="selectedAppointmentId">
                                    <option value="0">-- Select an appointment --</option>
                                    @foreach (var appointment in upcomingAppointments)
                                    {
                                        <option value="@appointment.Id">
                                            @appointment.ScheduledDateTime.ToString("MMMM dd, yyyy 'at' h:mm tt") - 
                                            @appointment.Provider?.User.FirstName @appointment.Provider?.User.LastName
                                        </option>
                                    }
                                </select>
                            }
                        </div>
                    }

                    @if (checkInType == "walkin")
                    {
                        <div class="mb-4">
                            <label class="form-label" style="font-weight: 600; color: #495057;">Priority Level</label>
                            <select class="form-select" @bind="priority">
                                <option value="1">Normal</option>
                                <option value="2">Urgent</option>
                                <option value="3">Emergency</option>
                            </select>
                        </div>
                    }

                    <div class="mb-4">
                        <label class="form-label" style="font-weight: 600; color: #495057;">Reason for Visit</label>
                        <textarea class="form-control" rows="3" @bind="reason" placeholder="Briefly describe the reason for your visit (optional)"></textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-lg" @onclick="PerformCheckIn" disabled="@isProcessing">
                            @if (isProcessing)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            Check In
                        </button>
                        <a href="/" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool loading = true;
    private bool isProcessing = false;
    private bool hasActiveQueueTicket = false;
    private ApplicationUser? currentUser;
    private Patient? currentPatient;
    private List<Appointment>? upcomingAppointments;
    private string checkInType = "appointment";
    private int selectedAppointmentId = 0;
    private int priority = 1;
    private string reason = "";
    private string errorMessage = "";
    private string successMessage = "";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        currentUser = await UserManager.GetUserAsync(authState.User);
        
        if (currentUser == null)
        {
            loading = false;
            return;
        }

        // Check if user is a patient
        if (!await AuthService.IsPatientAsync())
        {
            errorMessage = "Only patients can check in. If you are staff, please use the queue management page.";
            loading = false;
            return;
        }

        // Get patient record
        currentPatient = await DbContext.Patients
            .FirstOrDefaultAsync(p => p.UserId == currentUser.Id);

        if (currentPatient == null)
        {
            errorMessage = "Patient record not found. Please contact support.";
            loading = false;
            return;
        }

        // Check for active queue ticket
        var activeTicket = await DbContext.QueueTickets
            .FirstOrDefaultAsync(q => q.PatientId == currentPatient.Id && 
                                     q.Status != "Completed");

        if (activeTicket != null)
        {
            hasActiveQueueTicket = true;
            loading = false;
            return;
        }

        // Load upcoming appointments
        upcomingAppointments = await DbContext.Appointments
            .Include(a => a.Provider)
                .ThenInclude(p => p.User)
            .Where(a => a.PatientId == currentPatient.Id && 
                       a.Status == "Scheduled" && 
                       a.ScheduledDateTime >= DateTime.Now)
            .OrderBy(a => a.ScheduledDateTime)
            .ToListAsync();

        loading = false;
    }

    private async Task PerformCheckIn()
    {
        if (currentPatient == null)
        {
            errorMessage = "Patient record not found.";
            return;
        }

        isProcessing = true;
        errorMessage = "";
        successMessage = "";

        try
        {
            // Check if already in queue
            var existingTicket = await DbContext.QueueTickets
                .FirstOrDefaultAsync(q => q.PatientId == currentPatient.Id && 
                                          q.Status != "Completed");

            if (existingTicket != null)
            {
                errorMessage = "You are already checked in to the queue.";
                isProcessing = false;
                return;
            }

            // Get the next queue position
            var maxPosition = await DbContext.QueueTickets
                .Where(q => q.Status != "Completed")
                .Select(q => (int?)q.QueuePosition)
                .MaxAsync();

            int nextPosition = (maxPosition ?? 0) + 1;

            // Create queue ticket
            var queueTicket = new QueueTicket
            {
                PatientId = currentPatient.Id,
                AppointmentId = checkInType == "appointment" && selectedAppointmentId > 0 
                    ? selectedAppointmentId 
                    : null,
                CheckInTime = DateTime.UtcNow,
                Status = "Waiting",
                Priority = priority,
                QueuePosition = nextPosition,
                EstimatedWaitMinutes = CalculateWaitTime(nextPosition)
            };

            DbContext.QueueTickets.Add(queueTicket);
            await DbContext.SaveChangesAsync();

            successMessage = $"Successfully checked in! Your queue position is #{nextPosition}.";
            hasActiveQueueTicket = true;
            
            // Navigate to queue page after a short delay
            await Task.Delay(2000);
            Navigation.NavigateTo("/queue");
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while checking in. Please try again.";
            Console.WriteLine($"Check-in error: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task CancelCheckIn()
    {
        if (currentPatient == null) return;

        var activeTicket = await DbContext.QueueTickets
            .FirstOrDefaultAsync(q => q.PatientId == currentPatient.Id && 
                                     q.Status != "Completed");

        if (activeTicket != null)
        {
            activeTicket.Status = "Completed";
            activeTicket.CompletedTime = DateTime.UtcNow;
            await DbContext.SaveChangesAsync();
            hasActiveQueueTicket = false;
            StateHasChanged();
        }
    }

    private int CalculateWaitTime(int position)
    {
        // Simple calculation: 15 minutes per person ahead
        return (position - 1) * 15;
    }
}

