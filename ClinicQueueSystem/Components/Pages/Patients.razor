@page "/patients"
@rendermode InteractiveServer
@using ClinicQueueSystem.Data
@using ClinicQueueSystem.Data.Models
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Db

<PageTitle>Patients - Clinic Queue System</PageTitle>

<div class="container" style="padding: 2rem 0;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0" style="color: #2C5F8D;">Patients</h2>
        <a href="/patients/create" class="btn btn-primary">Add Patient</a>
    </div>

    <div class="mb-4">
        <input type="text" class="form-control" placeholder="Search by name or MRN..." @bind="searchText" />
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">@successMessage</div>
    }
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    @if (filteredPatients?.Any() != true)
    {
        <div class="alert alert-info">
            No patients found.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var patient in filteredPatients)
            {
                <div class="col-md-4 mb-4">
                    <div class="card" style="height: 100%;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" style="color: #2C5F8D; font-weight: 600; margin-bottom: 1rem;">
                                @patient.MedicalRecordNumber - @patient.User.FirstName @patient.User.LastName
                            </h5>
                            <p class="card-text text-muted" style="flex-grow: 1;">
                                @patient.PhoneNumber | @patient.User.Email
                            </p>
                            <div class="d-flex gap-2 mt-auto">
                                <a href="/patients/@patient.Id" class="btn btn-primary">View</a>
                                <a href="/patients/edit/@patient.Id" class="btn btn-secondary">Edit</a>
                                <button type="button" class="btn btn-danger" @onclick="() => ConfirmDelete(patient.Id)">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private string searchText = string.Empty;
    private List<Patient> patients = new();
    private string? errorMessage;
    private string? successMessage;
    private IEnumerable<Patient> filteredPatients => patients
        .Where(p => string.IsNullOrWhiteSpace(searchText)
                    || p.MedicalRecordNumber.Contains(searchText, StringComparison.OrdinalIgnoreCase)
                    || p.User.FirstName.Contains(searchText, StringComparison.OrdinalIgnoreCase)
                    || p.User.LastName.Contains(searchText, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        patients = await Db.Patients
            .Include(p => p.User)
            .ToListAsync();
    }

    private async Task ConfirmDelete(int id)
    {
        try
        {
            var entity = await Db.Patients.Include(p => p.User).FirstOrDefaultAsync(p => p.Id == id);
            if (entity == null)
            {
                errorMessage = "Patient not found.";
                return;
            }
            Db.Patients.Remove(entity);
            await Db.SaveChangesAsync();
            patients.RemoveAll(p => p.Id == id);
            successMessage = "Patient deleted.";
            errorMessage = null;
        }
        catch (DbUpdateException)
        {
            errorMessage = "Unable to delete patient due to related records.";
            successMessage = null;
        }
        catch (Exception)
        {
            errorMessage = "An error occurred while deleting the patient.";
            successMessage = null;
        }
    }
}
