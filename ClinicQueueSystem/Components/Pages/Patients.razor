@page "/patients"
@rendermode InteractiveServer
@using ClinicQueueSystem.Data
@using ClinicQueueSystem.Data.Models
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Db

<PageTitle>Patients - Clinic Queue System</PageTitle>

<div class="container" style="padding: 2rem 0;">
    <h2 class="mb-4" style="color: #2C5F8D;">Patients</h2>

    <div class="mb-4">
        <input type="text" class="form-control" placeholder="Search by name or MRN..." @bind="searchText" />
    </div>

    @if (filteredPatients?.Any() != true)
    {
        <div class="alert alert-info">
            No patients found.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var patient in filteredPatients)
            {
                <div class="col-md-4 mb-4">
                    <div class="card" style="height: 100%;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" style="color: #2C5F8D; font-weight: 600; margin-bottom: 1rem;">
                                @patient.MedicalRecordNumber - @patient.User.FirstName @patient.User.LastName
                            </h5>
                            <p class="card-text text-muted" style="flex-grow: 1;">
                                @patient.PhoneNumber | @patient.User.Email
                            </p>
                            <a href="/patients/@patient.Id" class="btn btn-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private string searchText = string.Empty;
    private List<Patient> patients = new();
    private IEnumerable<Patient> filteredPatients => patients
        .Where(p => string.IsNullOrWhiteSpace(searchText)
                    || p.MedicalRecordNumber.Contains(searchText, StringComparison.OrdinalIgnoreCase)
                    || p.User.FirstName.Contains(searchText, StringComparison.OrdinalIgnoreCase)
                    || p.User.LastName.Contains(searchText, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        patients = await Db.Patients
            .Include(p => p.User)
            .ToListAsync();
    }
}
