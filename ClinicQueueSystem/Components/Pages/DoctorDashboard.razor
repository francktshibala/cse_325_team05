@page "/dashboard/doctor"
@rendermode InteractiveServer
@using ClinicQueueSystem.Data
@using ClinicQueueSystem.Data.Models
@using ClinicQueueSystem.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Db
@inject AuthorizationService AuthService
@inject AuthenticationStateProvider AuthState
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Doctor Dashboard - Clinic Queue System</PageTitle>

<div class="container" style="padding: 2rem 0;">
    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!isDoctor)
    {
        <div class="alert alert-warning">This dashboard is only available to doctors.</div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-header" style="background-color: #2C5F8D; color: white;">
                        <h5 class="mb-0">Today's Schedule</h5>
                    </div>
                    <div class="card-body">
                        @if (provider is null)
                        {
                            <div class="alert alert-warning">Provider profile not found. Schedule is unavailable. Please contact an admin to link your user to a provider profile.</div>
                        }
                        @if (todaysAppointments?.Any() != true)
                        {
                            <div class="text-muted">No appointments today.</div>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var a in todaysAppointments)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <div><strong>@a.Patient.User.FirstName @a.Patient.User.LastName</strong> — @a.AppointmentType</div>
                                            <small class="text-muted">@a.ScheduledDateTime.ToLocalTime().ToString("h:mm tt") • @a.Status</small>
                                        </div>
                                        <div class="btn-group">
                                            <a class="btn btn-sm btn-outline-success" href="/appointments/@a.Id/visit-notes">Visit Notes</a>
                                            <a class="btn btn-sm btn-outline-secondary" href="/appointments">Details</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Current Queue</h5>
                    </div>
                    <div class="card-body">
                        @if (activeQueue?.Any() != true)
                        {
                            <div class="text-muted">No patients currently in queue.</div>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var q in activeQueue)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <div><strong>#@q.QueuePosition</strong> — @q.Patient.User.FirstName @q.Patient.User.LastName</div>
                                            <small class="text-muted">@q.Status • Wait: @q.EstimatedWaitMinutes mins</small>
                                        </div>
                                        @if (q.AppointmentId.HasValue)
                                        {
                                            <a class="btn btn-sm btn-outline-success" href="/appointments/@q.AppointmentId/visit-notes">Open Notes</a>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Next Patient</h5>
                    </div>
                    <div class="card-body">
                        @if (nextPatient == null)
                        {
                            <div class="text-muted">No patient waiting or called.</div>
                        }
                        else
                        {
                            <div class="mb-2"><strong>@nextPatient.Patient.User.FirstName @nextPatient.Patient.User.LastName</strong></div>
                            <div class="text-muted mb-3">Status: @nextPatient.Status • Position #@nextPatient.QueuePosition</div>
                            @if (nextPatient.AppointmentId.HasValue)
                            {
                                <a class="btn btn-primary" href="/appointments/@nextPatient.AppointmentId/visit-notes">Open Visit Notes</a>
                            }
                        }
                    </div>
                </div>

                @if (provider is null)
                {
                    <div class="card mt-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Account Setup</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">Your account is not linked to a provider profile. Contact an admin to create one for you.</p>
                            <a class="btn btn-outline-secondary" href="/providers">Open Providers</a>
                        </div>
                    </div>
                }

                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Quick Links</h5>
                    </div>
                    <div class="card-body d-grid gap-2">
                        <a class="btn btn-primary" href="/appointments">Appointments</a>
                        <a class="btn btn-outline-primary" href="/queue">Queue</a>
                        <a class="btn btn-outline-secondary" href="/schedules/manage">My Schedule</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool loading = true;
    private bool isDoctor = false;
    private Provider? provider;
    private List<Appointment> todaysAppointments = new();
    private List<QueueTicket> activeQueue = new();
    private QueueTicket? nextPatient;

    protected override async Task OnInitializedAsync()
    {
        isDoctor = await AuthService.IsDoctorAsync();
        if (!isDoctor)
        {
            loading = false;
            return;
        }
        var authState = await AuthState.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);
        if (user == null)
        {
            loading = false;
            return;
        }
        provider = await Db.Providers.Include(p => p.User).FirstOrDefaultAsync(p => p.UserId == user.Id);
        if (provider == null && isDoctor)
        {
            // Auto-create minimal provider profile for doctors
            provider = new Provider
            {
                UserId = user.Id,
                ProviderType = "Doctor",
                Specialty = string.Empty,
                LicenseNumber = $"AUTO-{Guid.NewGuid().ToString("N")[..6].ToUpper()}",
                IsActive = true,
                CreatedAt = DateTime.UtcNow
            };
            Db.Providers.Add(provider);
            await Db.SaveChangesAsync();
        }
        var today = DateTime.UtcNow.Date;
        var tomorrow = today.AddDays(1);
        if (provider != null)
        {
            todaysAppointments = await Db.Appointments
                .Include(a => a.Patient).ThenInclude(p => p.User)
                .Where(a => a.ProviderId == provider.Id && a.ScheduledDateTime >= today && a.ScheduledDateTime < tomorrow && a.Status != "Cancelled")
                .OrderBy(a => a.ScheduledDateTime)
                .ToListAsync();
        }

        activeQueue = await Db.QueueTickets
            .Include(q => q.Patient).ThenInclude(p => p.User)
            .Where(q => q.Status != "Completed")
            .OrderBy(q => q.QueuePosition)
            .Take(10)
            .ToListAsync();

        nextPatient = activeQueue
            .OrderBy(q => q.Status == "Called" ? 0 : q.Status == "Waiting" ? 1 : 2)
            .ThenBy(q => q.QueuePosition)
            .FirstOrDefault();
        loading = false;
    }
}


