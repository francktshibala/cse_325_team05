@page "/"

<PageTitle>Home - Clinic Queue System</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron bg-light p-5 rounded">
                <h1 class="display-4">Welcome to Clinic Queue & Appointments System</h1>
                <p class="lead">Streamline your healthcare experience with our modern digital solution.</p>
                <hr class="my-4" />
                <p>Book appointments, check in online, and manage your healthcare visits efficiently.</p>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-calendar-check"></i> Book Appointments
                    </h5>
                    <p class="card-text">Schedule your medical appointments online at your convenience.</p>
                    <a href="/appointments" class="btn btn-primary">View Appointments</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-check-square"></i> Quick Check-In
                    </h5>
                    <p class="card-text">Check in for your appointment digitally and view your queue position.</p>
                    <a href="/checkin" class="btn btn-primary">Check In</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-people"></i> Queue Status
                    </h5>
                    <p class="card-text">Monitor real-time queue status and estimated wait times.</p>
                    <a href="/queue" class="btn btn-primary">View Queue</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="alert alert-info" role="alert">
                <strong>Note:</strong> This is the foundation build for the CSE 325 Team Project. Features are under development.
            </div>
        </div>
    </div>
</div>
