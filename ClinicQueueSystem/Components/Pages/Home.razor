@page "/"

<PageTitle>Home - Clinic Queue System</PageTitle>

<div class="container" style="padding: 2rem 0;">
    <div class="row">
        <div class="col-md-12">
            <div class="bg-white p-5 rounded shadow-sm" style="border-left: 4px solid #2C5F8D;">
                <h1 style="color: #2C5F8D; font-weight: 700; margin-bottom: 1rem;">Welcome to Clinic Queue &
                    Appointments System</h1>
                <p class="lead" style="color: #495057; font-size: 1.25rem; margin-bottom: 1.5rem;">Streamline your
                    healthcare experience with our modern digital solution.</p>
                <hr style="border-top: 2px solid #e9ecef; margin: 1.5rem 0;" />
                <p style="color: #6c757d; font-size: 1.125rem;">Book appointments, check in online, and manage your
                    healthcare visits efficiently.</p>
            </div>
        </div>
    </div>

    <div class="row" style="margin-top: 3rem;">
        <div class="col-md-4" style="margin-bottom: 2rem;">
            <div class="card" style="height: 100%;">
                <div class="card-body" style="display: flex; flex-direction: column;">
                    <h5 class="card-title" style="color: #2C5F8D; font-weight: 600; margin-bottom: 1rem;">
                        📅 Book Appointments
                    </h5>
                    <p class="card-text" style="flex-grow: 1; color: #6c757d; line-height: 1.75;">Schedule your medical
                        appointments online at your convenience, anytime and anywhere.</p>
                    <a href="/appointments" class="btn btn-primary" style="margin-top: 1rem;">View Appointments</a>
                    <a href="/register" class="btn btn-primary" style="margin-top: 1rem;">Register</a>
                </div>
            </div>
        </div>

        <div class="col-md-4" style="margin-bottom: 2rem;">
            <div class="card" style="height: 100%;">
                <div class="card-body" style="display: flex; flex-direction: column;">
                    <h5 class="card-title" style="color: #17a2b8; font-weight: 600; margin-bottom: 1rem;">
                        ✅ Quick Check-In
                    </h5>
                    <p class="card-text" style="flex-grow: 1; color: #6c757d; line-height: 1.75;">Check in for your
                        appointment digitally and view your real-time queue position.</p>
                    <a href="/checkin" class="btn btn-secondary" style="margin-top: 1rem;">Check In Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-4" style="margin-bottom: 2rem;">
            <div class="card" style="height: 100%;">
                <div class="card-body" style="display: flex; flex-direction: column;">
                    <h5 class="card-title" style="color: #28a745; font-weight: 600; margin-bottom: 1rem;">
                        👥 Queue Status
                    </h5>
                    <p class="card-text" style="flex-grow: 1; color: #6c757d; line-height: 1.75;">Monitor real-time
                        queue status and get accurate estimated wait times.</p>
                    <a href="/queue" class="btn btn-success" style="margin-top: 1rem;">View Queue</a>
                </div>
            </div>
        </div>
    </div>

    
</div>
