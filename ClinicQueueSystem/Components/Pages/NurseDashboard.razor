@page "/dashboard/nurse"
@rendermode InteractiveServer
@using ClinicQueueSystem.Data
@using ClinicQueueSystem.Data.Models
@using ClinicQueueSystem.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Db
@inject AuthorizationService AuthService
@inject AuthenticationStateProvider AuthState
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Nurse Dashboard - Clinic Queue System</PageTitle>

<div class="container" style="padding: 2rem 0;">
    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!isNurse)
    {
        <div class="alert alert-warning">This dashboard is only available to nurses.</div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-12 col-lg-4">
                <div class="card">
                    <div class="card-header" style="background-color: #2C5F8D; color: white;">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <div>Waiting</div>
                            <div class="fw-bold">@waitingCount</div>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <div>Called</div>
                            <div class="fw-bold">@calledCount</div>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <div>In Room</div>
                            <div class="fw-bold">@inRoomCount</div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div>Completed Today</div>
                            <div class="fw-bold">@completedCount</div>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body d-grid gap-2">
                        <a class="btn btn-primary" href="/queue">Open Queue</a>
                        <a class="btn btn-outline-primary" href="/appointments">Appointments</a>
                        <a class="btn btn-outline-secondary" href="/checkin">Check In</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-header bg-light d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">Active Queue</h5>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="LoadQueue">Refresh</button>
                    </div>
                    <div class="card-body">
                        @if (queueTickets?.Any() != true)
                        {
                            <div class="text-muted">No patients currently in queue.</div>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var q in queueTickets.OrderBy(t => t.QueuePosition))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <div><strong>#@q.QueuePosition</strong> — @q.Patient.User.FirstName @q.Patient.User.LastName</div>
                                            <small class="text-muted">@q.Status • Wait: @q.EstimatedWaitMinutes mins</small>
                                        </div>
                                        <div class="btn-group btn-group-sm">
                                            <a class="btn btn-outline-primary" href="/queue">Update</a>
                                            @if (q.AppointmentId.HasValue)
                                            {
                                                <a class="btn btn-outline-success" href="/appointments/@q.AppointmentId/visit-notes">Notes</a>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool loading = true;
    private bool isNurse = false;
    private List<QueueTicket> queueTickets = new();

    private int waitingCount => queueTickets.Count(t => t.Status == "Waiting");
    private int calledCount => queueTickets.Count(t => t.Status == "Called");
    private int inRoomCount => queueTickets.Count(t => t.Status == "InRoom");
    private int completedCount => queueTickets.Count(t => t.Status == "Completed");

    protected override async Task OnInitializedAsync()
    {
        isNurse = await AuthService.IsNurseAsync();
        if (!isNurse)
        {
            loading = false;
            return;
        }
        // Ensure a provider profile exists for nurse users
        var authState = await AuthState.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);
        if (user != null)
        {
            var provider = await Db.Providers.FirstOrDefaultAsync(p => p.UserId == user.Id);
            if (provider == null)
            {
                provider = new Provider
                {
                    UserId = user.Id,
                    ProviderType = "Nurse",
                    Specialty = string.Empty,
                    LicenseNumber = $"AUTO-{Guid.NewGuid().ToString("N")[..6].ToUpper()}",
                    IsActive = true,
                    CreatedAt = DateTime.UtcNow
                };
                Db.Providers.Add(provider);
                await Db.SaveChangesAsync();
            }
        }
        await LoadQueue();
        loading = false;

        // Fallback periodic refresh (placeholder for SignalR real-time updates)
        _ = Task.Run(async () =>
        {
            while (true)
            {
                await Task.Delay(5000);
                await InvokeAsync(async () =>
                {
                    await LoadQueue();
                    StateHasChanged();
                });
            }
        });
    }

    private async Task LoadQueue()
    {
        var query = Db.QueueTickets
            .Include(q => q.Patient).ThenInclude(p => p.User)
            .Where(q => q.Status != "Completed");
        queueTickets = await query.ToListAsync();
    }
}


