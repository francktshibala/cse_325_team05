@page "/register"
@inject NavigationManager Nav

<PageTitle>Register - Clinic Queue System</PageTitle>

<div class="container" style="padding: 2rem 0; max-width: 500px; margin: 0 auto;">
    <div class="card" style="background: white; border: 1px solid #e9ecef; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08); padding: 0;">
        <div style="background-color: #f8f9fa; border-bottom: 2px solid #2C5F8D; padding: 16px 24px; border-radius: 8px 8px 0 0;">
            <h3 style="font-size: 1.5rem; font-weight: 600; color: #212529; margin: 0;">Create Account</h3>
        </div>

        <div style="padding: 24px;">
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert" style="padding: 16px 20px; border-radius: 6px; border-left: 4px solid #dc3545; background-color: #f8d7da; color: #721c24; margin-bottom: 16px;">
                    @ErrorMessage
                </div>
            }

            <form method="post" action="/api/account/register">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px; margin-bottom: 24px;">
                    <div>
                        <label style="font-size: 0.875rem; font-weight: 500; color: #495057; margin-bottom: 8px; display: block;">
                            First Name
                        </label>
                        <input type="text" name="firstName" required
                               style="width: 100%; border: 2px solid #dee2e6; border-radius: 6px; padding: 12px 16px; font-size: 1rem; box-sizing: border-box;"
                               placeholder="First name" />
                    </div>
                    <div>
                        <label style="font-size: 0.875rem; font-weight: 500; color: #495057; margin-bottom: 8px; display: block;">
                            Last Name
                        </label>
                        <input type="text" name="lastName" required
                               style="width: 100%; border: 2px solid #dee2e6; border-radius: 6px; padding: 12px 16px; font-size: 1rem; box-sizing: border-box;"
                               placeholder="Last name" />
                    </div>
                </div>

                <div style="margin-bottom: 24px;">
                    <label style="font-size: 0.875rem; font-weight: 500; color: #495057; margin-bottom: 8px; display: block;">
                        Email Address
                    </label>
                    <input type="email" name="email" required
                           style="width: 100%; border: 2px solid #dee2e6; border-radius: 6px; padding: 12px 16px; font-size: 1rem; box-sizing: border-box;"
                           placeholder="Enter your email" />
                </div>

                <div style="margin-bottom: 24px;">
                    <label style="font-size: 0.875rem; font-weight: 500; color: #495057; margin-bottom: 8px; display: block;">
                        Role
                    </label>
                    <select name="role" required
                            style="width: 100%; border: 2px solid #dee2e6; border-radius: 6px; padding: 12px 16px; font-size: 1rem; background-color: white; box-sizing: border-box;">
                        <option value="Patient">Patient</option>
                        <option value="Nurse">Nurse</option>
                        <option value="Doctor">Doctor</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>

                <div style="margin-bottom: 24px;">
                    <label style="font-size: 0.875rem; font-weight: 500; color: #495057; margin-bottom: 8px; display: block;">
                        Password
                    </label>
                    <input type="password" name="password" required minlength="6"
                           style="width: 100%; border: 2px solid #dee2e6; border-radius: 6px; padding: 12px 16px; font-size: 1rem; box-sizing: border-box;"
                           placeholder="At least 6 characters" />
                    <small style="color: #6c757d; font-size: 0.75rem; margin-top: 4px; display: block;">
                        Must contain uppercase, lowercase, and a number
                    </small>
                </div>

                <div style="margin-bottom: 24px;">
                    <label style="font-size: 0.875rem; font-weight: 500; color: #495057; margin-bottom: 8px; display: block;">
                        Confirm Password
                    </label>
                    <input type="password" name="confirmPassword" required minlength="6"
                           style="width: 100%; border: 2px solid #dee2e6; border-radius: 6px; padding: 12px 16px; font-size: 1rem; box-sizing: border-box;"
                           placeholder="Confirm your password" />
                </div>

                <button type="submit"
                        style="width: 100%; background-color: #28a745; color: white; border: none; padding: 12px 24px; border-radius: 6px; font-weight: 500; font-size: 1rem; cursor: pointer; transition: all 0.2s ease;">
                    Create Account
                </button>
            </form>

            <div style="margin-top: 24px; text-align: center; padding-top: 16px; border-top: 1px solid #e9ecef;">
                <p style="color: #6c757d; margin: 0;">
                    Already have an account?
                    <a href="/login" style="color: #2C5F8D; text-decoration: none; font-weight: 500;">Sign in here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    private string? ErrorMessage { get; set; }

    protected override void OnInitialized()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("error", out var error))
        {
            ErrorMessage = error;
        }
    }
}
