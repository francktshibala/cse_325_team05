@page "/dashboard/patient"
@rendermode InteractiveServer
@using ClinicQueueSystem.Data
@using ClinicQueueSystem.Data.Models
@using ClinicQueueSystem.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Db
@inject AuthorizationService AuthService
@inject AuthenticationStateProvider AuthState
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Patient Dashboard - Clinic Queue System</PageTitle>

<div class="container" style="padding: 2rem 0;">
    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!isPatient)
    {
        <div class="alert alert-warning">This dashboard is only available to patients.</div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-header" style="background-color: #2C5F8D; color: white;">
                        <h5 class="mb-0">Upcoming Appointments</h5>
                    </div>
                    <div class="card-body">
                        @if (patient is null)
                        {
                            <div class="alert alert-warning">Patient profile not found. Some features may be limited. Please contact support to complete your profile.</div>
                        }
                        @if (upcoming?.Any() != true)
                        {
                            <div class="text-muted">No upcoming appointments.</div>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var a in upcoming)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <div><strong>@a.AppointmentType</strong> with @a.Provider.User.FirstName @a.Provider.User.LastName</div>
                                            <small class="text-muted">@a.ScheduledDateTime.ToLocalTime().ToString("MMM dd, yyyy h:mm tt") â€¢ @a.Status</small>
                                        </div>
                                        <a class="btn btn-sm btn-outline-primary" href="/appointments">Details</a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Recent Visit Summaries</h5>
                    </div>
                    <div class="card-body">
                        @if (recentVisits?.Any() != true)
                        {
                            <div class="text-muted">No visit summaries available.</div>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var v in recentVisits)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <div><strong>@v.StartTime.ToLocalTime().ToString("MMM dd, yyyy")</strong></div>
                                            @if (!string.IsNullOrEmpty(v.Diagnosis))
                                            {
                                                <small class="text-muted">Dx: @v.Diagnosis</small>
                                            }
                                        </div>
                                        <a class="btn btn-sm btn-outline-secondary" href="/my/visit-summaries">View</a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Quick Links</h5>
                    </div>
                    <div class="card-body d-grid gap-2">
                        <a class="btn btn-primary" href="/appointments">My Appointments</a>
                        <a class="btn btn-outline-primary" href="/my/visit-summaries">Visit Summaries</a>
                        @if (patient != null)
                        {
                            <a class="btn btn-outline-secondary" href="/patients/@patient.Id">View Profile</a>
                        }
                        <a class="btn btn-outline-secondary" href="/checkin">Check In</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool loading = true;
    private bool isPatient = false;
    private Patient? patient;
    private List<Appointment> upcoming = new();
    private List<Visit> recentVisits = new();

    protected override async Task OnInitializedAsync()
    {
        isPatient = await AuthService.IsPatientAsync();
        if (!isPatient)
        {
            loading = false;
            return;
        }
        var authState = await AuthState.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);
        if (user == null)
        {
            loading = false;
            return;
        }

        patient = await Db.Patients.FirstOrDefaultAsync(p => p.UserId == user.Id);
        if (patient == null && isPatient)
        {
            // Auto-create minimal patient profile
            patient = new Patient
            {
                UserId = user.Id,
                MedicalRecordNumber = $"MRN-{DateTime.UtcNow.Ticks}",
                DateOfBirth = DateTime.UtcNow.Date,
                Gender = string.Empty,
                Address = string.Empty,
                PhoneNumber = string.Empty,
                EmergencyContact = string.Empty,
                EmergencyPhone = string.Empty,
                CreatedAt = DateTime.UtcNow
            };
            Db.Patients.Add(patient);
            await Db.SaveChangesAsync();
        }
        var now = DateTime.UtcNow;
        if (patient != null)
        {
            upcoming = await Db.Appointments
                .Include(a => a.Provider).ThenInclude(p => p.User)
                .Where(a => a.PatientId == patient.Id && a.ScheduledDateTime >= now && a.Status != "Cancelled")
                .OrderBy(a => a.ScheduledDateTime)
                .Take(5)
                .ToListAsync();

            recentVisits = await Db.Visits
                .Where(v => v.PatientId == patient.Id)
                .OrderByDescending(v => v.StartTime)
                .Take(5)
                .ToListAsync();
        }
        loading = false;
    }
}


