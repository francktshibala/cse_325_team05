@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="d-flex justify-content-between align-items-center w-100 flex-wrap gap-2">
                <h5 class="m-0 text-white d-none d-md-block">Clinic Queue & Appointments System</h5>
                <h5 class="m-0 text-white d-md-none" style="font-size: 0.9rem;">Clinic Queue</h5>
                <div class="d-flex align-items-center gap-2 flex-wrap">
                    <AuthorizeView>
                        <Authorized>
                            <span class="text-white d-none d-sm-inline" style="font-size: 0.875rem;">Welcome, @context.User.Identity?.Name</span>
                            <a href="/api/account/logout" class="btn btn-sm btn-outline-light">Logout</a>
                        </Authorized>
                        <NotAuthorized>
                            <span class="text-white d-none d-sm-inline" style="font-size: 0.875rem;">Welcome, Guest</span>
                            <a href="/login" class="btn btn-sm btn-outline-light">Login</a>
                            <a href="/register" class="btn btn-sm" style="background-color: #28a745; color: white; border: none;">Register</a>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">X</a>
</div>
