@using ClinicQueueSystem.Services
@using ClinicQueueSystem.Data.Models
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthorizationService AuthService
@inject AuthenticationStateProvider AuthenticationStateProvider
@using Microsoft.AspNetCore.Components
@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Clinic Queue</a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="HandleNavClick">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>
                <span class="nav-text">Home</span>
            </NavLink>
        </div>

        @if (canViewAppointments)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="appointments" @onclick="HandleNavClick">
                    <span class="bi bi-calendar-check-nav-menu" aria-hidden="true"></span>
                    <span class="nav-text">Appointments</span>
                </NavLink>
            </div>
        }

        <!-- Patients: open patients hub page -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="patients" @onclick="HandleNavClick">
                <span class="bi bi-people-nav-menu" aria-hidden="true"></span>
                <span class="nav-text">Patients</span>
            </NavLink>
        </div>
        <!-- End Patients -->

        @if (canViewQueue)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="queue" @onclick="HandleNavClick">
                    <span class="bi bi-people-nav-menu" aria-hidden="true"></span>
                    <span class="nav-text">Queue Status</span>
                </NavLink>
            </div>
        }

        @if (canCheckIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="checkin" @onclick="HandleNavClick">
                    <span class="bi bi-check-square-nav-menu" aria-hidden="true"></span>
                    <span class="nav-text">Check In</span>
                </NavLink>
            </div>
        }

        @if (canViewProviders)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="providers" @onclick="HandleNavClick">
                    <span class="bi bi-people-nav-menu" aria-hidden="true"></span>
                    <span class="nav-text">Providers</span>
                </NavLink>
            </div>
        }

        @if (canViewAdmin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin" @onclick="HandleNavClick">
                    <span class="bi bi-gear-nav-menu" aria-hidden="true"></span>
                    <span class="nav-text">Admin</span>
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool canViewAppointments = false;
    private bool canViewQueue = false;
    private bool canCheckIn = false;
    private bool canViewAdmin = false;
    private bool canViewProviders = false;


    [Parameter]
    public EventCallback OnNavigate { get; set; }

    protected override async Task OnInitializedAsync()
    {
        canViewAppointments = await AuthService.HasPermissionAsync(Permissions.Appointments_View);
        canViewQueue = await AuthService.HasPermissionAsync(Permissions.Queue_View);
        canCheckIn = await AuthService.HasPermissionAsync(Permissions.Queue_CheckIn);
        canViewAdmin = await AuthService.HasPermissionAsync(Permissions.Users_View);
        canViewProviders = canViewAdmin || await AuthService.IsDoctorAsync() || await AuthService.IsNurseAsync() || await AuthService.IsHealthRecordsAsync();
    }

    private Task HandleNavClick()
    {
        return OnNavigate.InvokeAsync();
    }
}

